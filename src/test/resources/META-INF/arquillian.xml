<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <defaultProtocol type="Servlet 3.0" />

    <engine>
        <property name="deploymentExportPath">target/artifacts</property>
    </engine>

    <container qualifier="incontainer">
        <configuration>
            <property name="jbossHome">C:\Programs\Wildfly Werk</property>
            <property name="javaVmArguments">-Xmx1024m -Xnoagent -Djava.compiler=NONE -Xdebug
                -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005
            </property>
            <property name="allowConnectingToRunningServer">true</property>
        </configuration>
    </container>
</arquillian>